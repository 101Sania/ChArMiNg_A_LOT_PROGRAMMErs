#include <iostream>
using namespace std;

int main()
{
    int i, n, cunt = 0;
    char s[52];
    cin >> n;
    for(i=0;i<n;i++)
    {
        cin >> s[i];
        if(i>=1)
        {
            if(s[i]==s[i-1])
            {
                cunt++;
            }
        }
    }

    cout << cunt << endl;
    return 0;
}